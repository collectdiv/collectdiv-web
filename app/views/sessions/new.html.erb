<div class="container">
  
<h1><%= title %></h1>
<%= form_tag  sessions_path do |f| %>
    <div class="field">
        <%= label_tag :username %><br />
        <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions">
        <%= submit_tag "Sign in" %>
    </div>
<% end %>
<p>New user? <%= link_to "Sign up now!" %></p>
</div>
